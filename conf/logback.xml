<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/log.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} - %level - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="application" level="DEBUG">
        <appender-ref ref="FILE"/>
    </logger>

</configuration>
